@model IEnumerable<bookselling.Models.Seller>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default", @style = "background-color:Blue" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Seller_ID }, new { @class = "btn btn-default", @style = "background-color:green" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Seller_ID }, new { @class = "btn btn-default", @style = "background-color:Red" })|
            @Html.ActionLink("Delete", "Delete", new { id = item.Seller_ID }, new { @class = "btn btn-default", @style = "background-color:Blue" })
        </td>
    </tr>
}

</table>
