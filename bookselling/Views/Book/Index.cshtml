@model IEnumerable<bookselling.Models.Book>

@{
    ViewBag.Title = "check";
    Layout = "~/Views/Shared/dashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {  }, new { @class = "btn btn-default", @style = "background-color:Blue" } )
</p>
<table class="table">
    @using (Html.BeginForm("index", "Book", FormMethod.Get))
    {
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "Name", true) <text>Book-Name</text>
       
        <br />
        @Html.TextBox("search")
        <input type="submit" value="search" />
    }
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sell_price);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee1.Emp_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sell_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee1.Emp_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Book_ID }, new { @class = "btn btn-default", @style = "background-color:green" })

            </td>
        </tr>
    }

</table>
